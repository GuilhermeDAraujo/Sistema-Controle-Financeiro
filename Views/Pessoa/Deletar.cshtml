@model Projeto_Controle_Financeiro.Models.Pessoa

@{
    ViewData["Title"] = "Deletar Pessoa";
}

<h1>Deletar Pessoa</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Deletar" onsubmit="return confirmDelete();">
            <input type="hidden" asp-for="PessoaId"/>
            
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" class="form-control" readonly/>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Deletar" class="btn btn-danger" />
            </div> 
        </form>
    </div>
</div>
<hr/>
<div>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>

<script type="text/javascript">
    function confirmDelete(){
        var pessoa = "@Model.Nome";
        var cpf = "@Model.Cpf";

        var mensagem = `Tem certeza que deseja deletar a pessoa: \nNome: ${pessoa} \nCPF: ${cpf}`;
        return confirm(mensagem);
    }
</script>